<section class="card login-card m-auto my-2">
    <div class="card-header d-flex justify-content-center align-items-center">
        <h2 class="fw-bolder h4">Log In</h2>
    </div>
    <div class="card-body d-flex justify-content-center align-items-center">
        <form class="form login-form">
            <div class="form-group p-2 d-flex justify-content-between align-items-center">
                <label for="username-login">Username: </label>
                <input class="form-input mx-2" type="text" id="username-login" />
            </div>
            <div class="form-group p-2 d-flex justify-content-between align-items-center">
                <label for="password-login">Password: </label>
                <input class="form-input mx-2" type="password" id="password-login" />
            </div>
            <div class="form-group p-2 d-flex justify-content-center my-1">
                <button class="btn btn-primary" type="submit">Log In</button>
            </div>
        </form>
    </div>
</section>

