<section class="card m-auto my-2">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="fw-bolder h4">{{post.title}}</h2>
        <p class="card-text">Posted by <span class="fw-bolder">{{post.User.username}}</span> on {{format_date post.dateCreated}} </p>
    </div>
    <div class="card-body">
        <p class="card-text">
            {{post.body}}
        </p>
    </div>
</section>
<section class="card m-auto my-2">
    <div class="card-header">
        <h3 class="fw-bolder h5">Comments</h3>
    </div>
    {{#each post.Comments as |Comment|}}
    <div class="card-body d-flex justify-content-between flex-wrap align-items-center">
        <p class="card-text col-12 col-md-8">
            {{body}}
        </p>
        <p class="card-text comment-details col-12 col-md-4 text-end">Posted by <span class="fw-bolder">{{User.username}}</span> on {{format_date dateCreated}} </p>
    </div>
    {{/each}}
    <div class="card-body">
        <form class="form new-comment-form">
            <div class="mb-2">
                <textarea class="form-control" placeholder="Leave a comment..." id="comment-body"></textarea>
            </div>
            <div class="p-2 d-flex justify-content-end my-1">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </form>
    </div>
</section>

<script src="/js/newcomment.js"></script>